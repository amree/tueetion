= form_for @center do |f|
  .row
    .large-6.large-centered.large-uncentered.columns
      = f.label :name
      = f.text_field :name

    .large-12.columns
      = f.submit "Save", class: "button"

  /- if @center.errors.any?
  /  #error_explanation
  /    %h2= "#{pluralize(@center.errors.count, "error")} prohibited this center from being saved:"
  /    %ul
  /      - @center.errors.full_messages.each do |msg|
  /        %li= msg

  /.field
  /  = f.label :name
  /  = f.text_field :name
  /.actions
  /= f.submit 'Save'
