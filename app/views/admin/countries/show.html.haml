= render 'layouts/flashes/flash_messages'

.row
  .col-md-12
    .panel.panel-borderless
      .panel-body
        .section-title
          .btn-group.pull-right
            %button.btn.btn-default.dropdown-toggle{ :"data-toggle" => "dropdown", type: "button" }
              Actions
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to "Edit", edit_admin_country_path(@country)
              %li.divider
              %li
                = link_to "Delete", [:admin, @country], method: :delete, data: { confirm: "Are you sure you want to delete this country?" }

          %h2 Credit

        %dl.dl-horizontal
          %dt
            Name
          %dd
            = @country.name
          %dt
            Calling Code
          %dd
            = @country.calling_code
          %dt
            SMS Rate (USD)
          %dd
            = @country.sms_rate
          %dt
            Active
          %dd
            = status_label(@country.is_active)
          %dt
            Created At
          %dd
            = @country.created_at
          %dt
            Updated At
          %dd
            = @country.updated_at
