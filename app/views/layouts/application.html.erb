<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
<meta charset="utf-8" />

<!-- Uncomment to make IE8 render like IE7 -->
<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

<!-- Set the viewport width to device width for mobile -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>Tueetion</title>

<%= stylesheet_link_tag    "application" %>
<%= javascript_include_tag "vendor/custom.modernizr" %>
<%= csrf_meta_tags %>
</head>

<body>
  <div class="row">
    <div class="large-12 columns">
      <!-- Navigation -->
      <div class="row">
        <div class="large-12 columns">

          <nav class="top-bar">
            <ul class="title-area">
              <!-- Title Area -->
              <li class="name">
                <h1>
                  <a href="/">Tueetion</a>
                </h1>
              </li>
              <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
            </ul>

            <section class="top-bar-section">
              <!-- Right Nav Section -->
              <ul class="right">
                <li class="divider hide-for-small"></li>
                <li class="has-dropdown">
                  <a href="#">Account</a>
                  <ul class="dropdown">
                    <li><a href="<%= new_user_session_path %>">Sign In</a></li>
                    <li><a href="<%= destroy_user_session_path %>" data-method="delete">Sign Out</a></li>
                    <li><a href="<%= edit_user_registration_path %>">Edit</a></li>
                    <li><a href="<%= new_user_registration_path %>">Register</a></li>
                    <li><a href="<%= centers_path %>">Centers</a></li>
                    <li><a href="<%= combination_fees_path %>">Combination Fee</a></li>
                    <li><a href="<%= quantity_fees_path %>">Quantity Fee</a></li>
                    <li><a href="<%= students_path %>">Students</a></li>
                    <li><a href="<%= subjects_path %>">Subjects</a></li>
                  </ul>
                </li>
              </ul>
            </section>

          </nav>
        </div>
      </div>

      <% unless notice.nil? %>
        <div data-alert class="alert-box">
          <%= notice %>
          <a href="" class="close">×</a>
        </div>
      <% end %>
      <% unless alert.nil? %>
        <div data-alert class="alert-box alert">
          <%= alert %>
          <a href="" class="close">×</a>
        </div>
      <% end %>

      <!-- End Navigation -->
      <%= yield %>
      <!-- Footer -->
      <!-- End Footer -->
    </div>
  </div>
<%= javascript_include_tag "application" %>
</body>
</html>
