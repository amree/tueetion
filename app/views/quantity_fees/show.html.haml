.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li Setup
    %li= link_to "Quantity Fees", quantity_fees_path
    %li.active
      = @quantity_fee.name

= render 'layouts/flash_messages'

.row
  .col-md-3
    = render 'layouts/setup_sidebar'

  .col-md-9
    .panel.panel-borderless
      .panel-body
        .section-title
          .btn-group.pull-right
            %button.btn.btn-default.dropdown-toggle{ :"data-toggle" => "dropdown", type: "button" }
              Actions
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to edit_quantity_fee_path(@quantity_fee) do
                  %i.fa.fa-pencil.fa-fw
                  Edit
              %li
                = link_to @quantity_fee, method: :delete, data: { confirm: "Are you sure you want to delete this quantity fee?" } do
                  %i.fa.fa-trash-o.fa-fw
                  Delete
          %h2 Quantity Fee

        %dl.dl-horizontal
          %dt
            Name
          %dd
            = @quantity_fee.name
          %dt
            Subject
          %dd
            = @quantity_fee.subject.name
          %dt
            Price (RM)
          %dd
            = number_with_precision(@quantity_fee.price, precision: 2)
          %dt
            Status
          %dd
            = status_label(@quantity_fee.is_active)
          %dt
            Created at:
          %dd
            = l @quantity_fee.created_at.in_time_zone("Kuala Lumpur")
          %dt
            Updated at:
          %dd
            = l @quantity_fee.updated_at.in_time_zone("Kuala Lumpur")
