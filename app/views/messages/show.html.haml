.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li= link_to "Messages", messages_path
    %li.active Message

= render 'layouts/flash_messages'

.row
  .col-md-12
    .panel.panel-borderless
      .panel-body
        .section-title
          .pull-right
            = link_to "Delete", @message, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this message?" }
          %h2
            Message

        %dl.dl-horizontal
          %dt
            Student's Name
          %dd
            = link_to @message.student.first_name, @message.student
          %dt
            Phone #
          %dd
            = @message.phone_number
          %dt
            Content
          %dd
            = @message.content
          %dt
            Status
          %dd
            = message_status_label(@message.status)
          - if @message.status == "invalid"
            %dt
              &nbsp;
            %dd
              = @message.failed_messages
          %dt
            Created at:
          %dd
            = l @message.created_at.in_time_zone("Kuala Lumpur")
          %dt
            Updated at:
          %dd
            = l @message.updated_at.in_time_zone("Kuala Lumpur")

