.row
  .col-md-6.col-md-offset-3
    %h1
      Sign Up
    .panel.panel-default
      .panel-body
        = devise_error_messages!
        = form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|

          - resource.key = params[:key] || resource.key

          - if resource.key.present?
            = f.hidden_field :key

          .form-group
            = f.label :first_name
            = f.text_field :first_name, class: "form-control", autofocus: true
          .form-group
            = f.label :last_name
            = f.text_field :last_name, class: "form-control"

          - if resource.key.blank?
            .form-group
              = f.label :email
              = f.email_field :email, class: "form-control"

          .form-group
            = f.label :password
            = f.password_field :password, class: "form-control"
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: "form-control"

          = f.submit "Sign Up", class: "btn btn-primary", :"data-disable-with" => "Signing up..."
          or
          = link_to "Sign in", new_user_session_path

.row
  .col-md-4.col-md-offset-4
    %h6.text-center
      Got any problem with our registration?
    %h6.text-center
      = link_to new_user_registration_path do
        Contact Us

