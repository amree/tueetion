.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li.active Setup
    %li.active Groups

= render 'layouts/flashes/flash_messages'

.row
  .col-md-3
    = render 'layouts/setup_sidebar'

  .col-md-9
    .panel.panel-borderless
      .panel-body
        .section-title
          .pull-right
            = link_to "New Group", new_group_path, class: "btn btn-primary"
          %h2
            Groups

        - if @groups.size > 0
          %table.table.table-hover.table-text-middle
            %thead
              %th Name
              %th
            %tbody
              - @groups.each do |group|
                %tr
                  %td
                    = group.name
                  %td.text-right
                    = link_to edit_group_path(group), class: "btn btn-primary" do
                      %i.fa.fa-pencil.fa-fw
                    = link_to group_path(group), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this group? This will also unassigned students from it." } do
                      %i.fa.fa-trash-o.fa-fw

        - else
          No groups to be displayed.

