.breadcrumb-container
  %ol.breadcrumb
    %li
      = link_to "Home", root_path
    %li.active Students

= render 'layouts/flash_messages'

.section-title
  = link_to "New Student", new_student_path, class: "btn btn-primary pull-right"
  %h2 Students

%table.table.table-hover
  %thead
    %tr
      %th #
      %th Identity #
      %th First Name, Last Name
      %th E-Mail
      %th Phone #
      %th Status
      %th
  %tbody
  - @students.each do |student|
    %tr
      %td #
      %td= student.ic
      %td
        = succeed "," do
          = student.first_name
        = student.last_name
      %td= student.email
      %td= student.phone
      %td= student.is_active
      %td.text-right
        = link_to 'Show', student
        \/
        = link_to 'Edit', edit_student_path(student)
        \/
        = link_to 'Destroy', student, :method => :delete, :data => { :confirm => 'Are you sure?' }

