.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li= link_to "Students", students_path
    %li.active= @student.first_name

= render 'layouts/flash_messages'

.panel.panel-default
  .panel-body
    .section-title
      .btn-group.pull-right
        %button.btn.btn-default{ type: "button" }
          Action
        %button.btn.btn-default.dropdown-toggle{ :"data-toggle" => "dropdown", type: "button" }
          %span.caret
        %ul.dropdown-menu{ role: "menu" }
          %li
            = link_to "Edit", edit_student_path(@student)
          %li.divider
          %li
            = link_to "Enroll by Package", student_quantity_fee_enrolls_path(@student)
          %li
            = link_to "Enroll by Subject", student_combination_fee_enrolls_path(@student)
          %li.divider
          %li
            = link_to "Generate Bill", generate_bill_student_path, method: :post
      %h2 Profile

    %dl.dl-horizontal
      %dt
        Identity #
      %dd
        = @student.ic
      %dt
        First Name, Last Name
      %dd
        = succeed "," do
          = @student.first_name
        = @student.last_name
      %dt
        DOB
      %dd
        = @student.dob
      %dt
        Phone
      %dd
        = @student.phone
      %dt
        E-Mail:
      %dd
        = @student.email
      %dt
        School Name
      %dd
        = @student.school_name
      %dt
        Status
      %dd
        = @student.is_active

.panel.panel-default
  .panel-body
    .section-title
      %h2 Packages &amp; Subjects

    = render 'enrolls/list', student: @student

.panel.panel-default
  .panel-body
    .section-title
      %h2 Latest Bills

    = render 'bills/list', bills: @student.bills

.panel.panel-default
  .panel-body
    .section-title
      %h2 Latest Payments

    = render 'payments/list', payments: @payments


