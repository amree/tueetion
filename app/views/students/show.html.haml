.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li= link_to "Students", students_path
    %li.active= @student.first_name

= render 'layouts/flash_messages'

.section-title
  %h2 Profile

%dl.dl-horizontal
  %dt
    Identity #
  %dd
    = @student.ic
  %dt
    First Name, Last Name
  %dd
    = succeed "," do
      = @student.first_name
    = @student.last_name
  %dt
    DOB
  %dd
    = @student.dob
  %dt
    Phone
  %dd
    = @student.phone
  %dt
    E-Mail:
  %dd
    = @student.email
  %dt
    School Name
  %dd
    = @student.school_name
  %dt
    Status
  %dd
    = @student.is_active

.section-title
  .btn-group.pull-right
    = link_to "New Package", student_quantity_fee_enrolls_path(@student), class: "btn btn-primary"
    = link_to "New Subject", student_combination_fee_enrolls_path(@student), class: "btn btn-primary"
  %h2 Packages &amp; Subjects

= render 'enrolls/list', student: @student


.section-title
  = link_to "Generate Bill", new_student_path, class: "btn btn-primary pull-right"
  %h2 Bills

= render 'bills/list', bills: @student.bills

