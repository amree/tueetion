= form_for @student, html: { class: "form-horizontal", role: "form" } do |f|

  .form-group
    = f.label :ic, "Identity #", class: "col-lg-2 control-label"
    .col-lg-2
      = f.text_field :ic, class: "form-control", placeholder: "Identity #"

  .form-group
    = f.label :first_name, class: "col-lg-2 control-label"
    .col-lg-4
      = f.text_field :first_name, class: "form-control", placeholder: "First Name"

  .form-group
    = f.label :last_name, class: "col-lg-2 control-label"
    .col-lg-4
      = f.text_field :last_name, class: "form-control", placeholder: "Last Name"

  .form-group
    = f.label :dob, class: "col-lg-2 control-label"
    .col-lg-2
      = f.date_select :dob, {}, class: "form-control"

  .form-group
    = f.label :email, class: "col-lg-2 control-label"
    .col-lg-4
      = f.text_field :email, class: "form-control", placeholder: "E-Mail"

  .form-group
    = f.label :phone, class: "col-lg-2 control-label"
    .col-lg-2
      = f.text_field :phone, class: "form-control", placeholder: "Phone #"

  .form-group
    = f.label :school_name, class: "col-lg-2 control-label"
    .col-lg-4
      = f.text_field :school_name, class: "form-control", placeholder: "School Name"

  .form-group
    .col-lg-offset-2.col-lg-10
      .checkbox
        = f.check_box :is_active
        Active

  .form-group
    .col-lg-offset-2.col-lg-10
      %button.btn.btn-primary{ type: "submit"}
        Save
      or
      = link_to "Cancel", subjects_path

