.section-title
  %h2
    Bill Items

%table.table.table-hover
  %thead
    %tr
      %th #
      %th Name
      %th Amount
      %th
  %tbody
  - bill_items.each do |bill_item|
    %tr
      %td #
      %td= bill_item.name
      %td= bill_item.amount
      %td.text-right
        = link_to 'Edit', edit_bill_bill_item_path(bill, bill_item)
        \/
        = link_to 'Destroy', [bill, bill_item], :method => :delete, :data => { :confirm => 'Are you sure?' }

