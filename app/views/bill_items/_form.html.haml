= form_for [@bill, @bill_item] do |f|
  - if @bill_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bill_item.errors.count, "error")} prohibited this bill_item from being saved:"
      %ul
        - @bill_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
