= form_for [@bill, @payment], html: { class: "form-horizontal", role: "form" } do |f|

  = form_group @payment.errors[:amount].present? do
    = f.label :amount, "Amount (RM)", class: "col-lg-2 control-label"
    .col-lg-2
      = f.text_field :amount, class: "form-control", placeholder: "100"

  = form_group @payment.errors[:paid_at].present? do
    = f.label :paid_at, "Paid at", class: "col-lg-2 control-label"
    .col-lg-2
      = f.datetime_select :paid_at, {}, class: "form-control"

  .form-group
    .col-lg-offset-2.col-lg-10
      %button.btn.btn-primary{ type: "submit"}
        Save
      or
      = link_to "Cancel", @bill

