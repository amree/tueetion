= form_for @student, url: student_combination_fee_enrolls_path(@student), html: { class: "form-horizontal", role: "form" }, method: :post do |f|

  = select_tag "student[enrolls_attributes][123][enrollable_id]", options_from_collection_for_select(@combination_fees, "id", "name")

  - @combination_item_fees.each do |combo_item|
    %p
      = check_box_tag "student[enrolls_attributes][123][enroll_subjects_attributes][0][subject_id]", combo_item.subject.id
      = combo_item.subject.name

  = f.submit
