.breadcrumb-container
  %ol.breadcrumb
    %li= link_to "Home", root_path
    %li Setup
    %li
      = link_to "Subjects", subjects_path
    %li.active
      = @subject.name

= render 'layouts/flash_messages'

.row
  .col-md-3
    = render 'layouts/setup_sidebar'

  .col-md-9
    .panel.panel-borderless
      .panel-body
        .section-title
          .btn-group.pull-right
            %button.btn.btn-default.dropdown-toggle{ :"data-toggle" => "dropdown", type: "button" }
              Actions
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to edit_subject_path(@subject) do
                  %i.fa.fa-pencil.fa-fw
                  Edit
              %li
                = link_to @subject, method: :delete, data: { confirm: "Are you sure you want to delete this subject?" } do
                  %i.fa.fa-trash-o.fa-fw
                  Delete
          %h2
            Subjects

        %dl.dl-horizontal
          %dt
            Name
          %dd
            = @subject.name
          %dt
            Status
          %dd
            = status_label(@subject.is_active)
          %dt
            Created at:
          %dd
            = l @subject.created_at.in_time_zone("Kuala Lumpur")
          %dt
            Updated at:
          %dd
            = l @subject.updated_at.in_time_zone("Kuala Lumpur")

