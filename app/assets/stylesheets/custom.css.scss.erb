// Override variables
//

// Body background
$body-bg: whitesmoke;

// Breadcrumb background colour
$breadcrumb-bg: white;

// Typography
$font-family-sans-serif: 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;

// Buttons
$btn-primary-bg: #06C;

@import "bootstrap";

// Mixins
//
.panel-borderless {
  @include panel-variant(transparent, black, transparent, transparent);
}

.panel-body-sidebar {
  padding: 8px;
}

// Buttons
@mixin button-shadow($colour) {
  -webkit-box-shadow:0 1px 0 $colour;
     -moz-box-shadow:0 1px 0 $colour;
          box-shadow:0 1px 0 $colour;
}
.btn-default {
  @include button-shadow(#ccc);
}

.btn-primary {
  @include button-shadow(#105296);
}

.btn-danger {
  @include button-shadow(#971139);
}

.btn-success {
  @include button-shadow(#3E7D3E);
}

.btn-warning {
  @include button-shadow(#985E0C);
}


// Custom
//
.required:after {
  content: '*';
}
.push-down {
  padding-top: 40px;
}

// Front Page
.menu {
  .navbar {
    margin-bottom: 0px;
    border-color: transparent;
  }

  background-color: #f8f8f8;
}

#headerwrap {
  background: url('<%= asset_path "home-bg-1.jpg" %>') no-repeat center top;
  padding-top: 20px;
  background-attachment: relative;
  background-position: center center;
  min-height: 500px;
  width: 100%;
  -webkit-background-size: 100%;
  -moz-background-size: 100%;
  -o-background-size: 100%;
  background-size: 100%;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.inner {
  height: 170px;
}

#intro {
  .inner {
    height: 170px;
    padding-bottom: 14%;
    padding-top: 14%;
    z-index: 1;

    .intro-lead {
      background: rgba(0,0,0,0.4);
      border-radius: 6px;
      padding: 20px 25px 25px;
      position: absolute;

      h1 {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        color: #fff;
        margin-bottom: 25px;
        text-indent: -3px;
      }

      .sub-h1 {
        font-size: 28px;
        text-indent: 0;
      }
    }
  }
}

.marketing {
  padding-top: 50px;
  padding-bottom: 50px;
  background-color: #fff;
}

.try-now {
  padding-top: 50px;
  padding-bottom: 50px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;

  span {
    font-size: 180%;
    padding: 0 15px 0 15px;
  }
}

.about {
  padding-bottom: 50px;
  background: #3a3a3a;
  color: #999;

  .about-nav {
    padding-top: 30px;

    strong {
      border-bottom: 1px solid #444;
      display: block;
      margin-bottom: 10px;
      font-size: 110%;
    }

    a {
      color: #777;
      display: block;
    }

    a:hover, a:hover {
      text-decoration: none;
      color: #aaa;
    }
  }
}

.single {
  padding-top: 60px;
}


// Components

.section-title {
  border-bottom: 1px solid #e5e5e5;
  margin-bottom: 25px;

  h2 {
    margin-top: 0;
    margin-bottom: 0;
    line-height: 40px;
    padding-bottom: 10px;
  }
}

.panel-status {
  padding-top: 0px;
  text-align: center;

  h3 {
    font-weight: bold;
    color: #8493ca;
  }

  p {
    color: #7d7d7d;
    text-transform: uppercase;
  }
}

#box-sm {
  .spacer {
    padding: 30px 0 30px 0;
  }

  h1 {
    padding-bottom: 15px;
  }

  .panel {
    -webkit-box-shadow: 0 3px 0 #ccc;
       -moz-box-shadow: 0 3px 0 #ccc;
            box-shadow: 0 3px 0 #ccc;
  }
}

// General usage
.margin-top-md {
  margin-top: 25px;
}

.margin-bottom-md {
  margin-bottom: 25px;
}

.margin-top-lg {
  margin-top: 50px;
}

.right-border {
  height: 200px;
  border-right: 1px solid #e5e5e5;
}

.table-text-middle > tbody > tr > td {
  vertical-align: middle;
}

.top-buffer {
  margin-top: 20px;
}

.right-form-buffer {
  margin-right: 10px;
}

// Overrides
dt, dd {
  line-height: 2.42857;
}

.help-block {
  margin-bottom: 0px;
}

.checkbox {
  max-height: 27px;
}
